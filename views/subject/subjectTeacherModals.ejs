<!-- Update Modal -->
<div class="modal fade" id="subject-teacher-updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <!-- Added 'modal-lg' class for larger width -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateModalLabel">Update Subject Teacher Information</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="box ">
                    <!-- Visit "codeastro.com" for more projects! -->
                    <form name="assign_subject_teacher" id="assign_subject_teacher" method="post" accept-charset="utf-8">
                             <div class="box-body ">
                                 <div class="box-header add_class_msg text-red"></div>
                                    <div class="form-group">
                                        <div class="input-control">
                                         <label>Select Teacher</label>
                                         <select  id="teacher_id" name ="teacher_id" class="form-select" style="width: 100%;">
                                             <option value="select" >Select Teacher</option>
                                         </select>
                                         <div class="error"></div>
                                        </div>
                                     </div>     
                                     <div class="form-group">
                                        <div class="input-control">
                                        <label>Select Subject</label>
                                        <select required="" id="subject_id" name ="subject_id" class="form-select" style="width: 100%;">
                                            <option value="select" >Select Subject</option>
                                        </select>
                                        <div class="error"></div>
                                    </div>
                                    </div>
                
                                    <div class="form-group">
                                        <div class="input-control">
                                        <label>Select Grade</label>
                                        <select  id="select_grade" name ="select_grade" class="form-select" style="width: 100%;">
                                            <option value="select" >Select Grade</option>
                                        </select>
                                        <div class="error"></div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-control">
                                        <label>Select Section</label>
                                        <select  id="letter_grade_id" name ="letter_grade_id" class="form-select" style="width: 100%;">
                                            <option value="select">Select Section</option>
                                        </select>
                                        <div class="error"></div>
                                        </div>
                                    </div>
                                    
                                   
                
                                     <div class="form-group has-feedback">
                                         <button class="btn btn-success" >Assign Teacher</button>
                                     </div>     
                                    </div>
                                </form>
                         </div>
            </form>

        </div>

    </div>
</div>
