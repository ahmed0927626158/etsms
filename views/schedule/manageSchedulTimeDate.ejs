                        <div class="row">
                            <div class="col-sm-4">
                                <div id="add_subject_box">
                                    <%- include('assign_schedule'); -%>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="list_subject">
                                    <h4>Assigned Schedule  Information</h4>
                                    <table id="schedule_info_table" class="table table-striped" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Grade</th>
                                                <th>Schedule Time</th>
                                                <th>Subject</th>
                                                <th>Day</th>
                                                <th>Teacher</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (var i = 0; i < assigned_schedule_data.length; i++) { %>
                                              <tr>
                                                <td><%= assigned_schedule_data[i].id %></td>
                                                <td><%= assigned_schedule_data[i].grade %></td>
                                                <td><%= assigned_schedule_data[i].schedule_time %></td>
                                                <td><%= assigned_schedule_data[i].subject %></td>
                                                <td><%= assigned_schedule_data[i].day %></td>
                                                <td><%= assigned_schedule_data[i].teacher %></td>
                                                <td>
                                                  <a href="#">
                                                    <i class="material-icons"> edit</i>
                                                  </a>
                                                  <a href="#">
                                                    <i class="material-icons">delete</i>
                                                  </a>
                                               
                                                </td>
                                                </tr>
                                            <% } %>

                                              
                                          </tbody>
                                          
                                      </table>
                                    
                                </div>
                            </div>
                        </div>
