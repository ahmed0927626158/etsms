                                    <h4>Schedule time Information</h4>
                                    <table id="schedule_info_table" class="table table-striped" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Start Time</th>
                                                <th>End Time</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (var i = 0; i < scheduleTime.length; i++) { %>
                                              <tr>
                                                <td><%= scheduleTime[i].id %></td>
                                                <td><%= scheduleTime[i].start_time %></td>
                                                <td><%= scheduleTime[i].end_time %></td>
                                                <td>
                                                  <a href="#">
                                                    <i class="material-icons"> edit</i>
                                                  </a>
                                                  <a href="#">
                                                    <i class="material-icons">delete</i>
                                                  </a>
                                               
                                                </td>
                                                </tr>
                                            <% } %>
                                          </tbody>
                                          
                                      </table>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="tab-pane" id="assign_schedule">
